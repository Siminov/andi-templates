<database-mapping-descriptor>

	<entity table_name="PRICING" class_name="siminov.core.sample.model.Pricing">

		<attribute variable_name="priceId" column_name="PRICE_ID">
			<property name="type">long</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>		

		<attribute variable_name="price" column_name="PRICE">
			<property name="type">double</property>
		</attribute>

		<attribute variable_name="tax" column_name="TAX">
			<property name="type">double</property>
		</attribute>

		<attribute variable_name="discount" column_name="DISCOUNT">
			<property name="type">double</property>
		</attribute>

		<relationships>
			
			<one-to-one refer="liquorBrand" refer_to="siminov.core.sample.model.LiquorBrand" on_update="cascade" on_delete="cascade">
				<property name="load">true</property>
			</one-to-one>		
								    		
		</relationships>				
		
	</entity>

</database-mapping-descriptor>		
		