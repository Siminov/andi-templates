<database-mapping-descriptor>

	<entity table_name="SHOP" class_name="siminov.core.sample.model.Shop">
		
		<attribute variable_name="shopId" column_name="SHOP_ID">
			<property name="type">long</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>		

		<attribute variable_name="name" column_name="NAME">
			<property name="type">java.lang.String</property>
		</attribute>

		<attribute variable_name="address" column_name="ADDRESS">
			<property name="type">java.lang.String</property>
		</attribute>

	</entity>

</database-mapping-descriptor>		
		