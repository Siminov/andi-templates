<service-descriptor>

  <property name="name">SIMINOV-CONNECT-BOOKS-SERVICE</property>
  <property name="description">Siminov Connect Books Service</property>
  <property name="protocol">HTTP</property>
  <property name="instance">siminov.com</property>
  <property name="port">80</property>
  <property name="context">ws</property>

  <requests>
    <request>

      <property name="name">GET-BOOKS</property>
      <property name="type">GET</property>
      <property name="api">get_books.php</property>
      <property name="handler">Siminov.Connect.Sample.Services.GetBooks</property>
      <property name="mode">SYNC</property>

      <header-parameters>
        <header-parameter>
          <property name="name">Accept</property>
          <property name="value">application/xml</property>
        </header-parameter>
        <header-parameter>
          <property name="name">Content-Type</property>
          <property name="value">application/xml</property>
        </header-parameter>
      </header-parameters>

    </request>
    <request>

      <property name="name">ADD-BOOK</property>
      <property name="type">POST</property>
      <property name="api">add-book.php</property>
      <property name="handler">Siminov.Connect.Sample.Services.AddBook</property>
      <property name="mode">ASYNC</property>

      <header-parameters>
        <header-parameter>
          <property name="name">Accept</property>
          <property name="value">application/xml</property>
        </header-parameter>
        <header-parameter>
          <property name="name">Content-Type</property>
          <property name="value">application/xml</property>
        </header-parameter>
      </header-parameters>

    </request>
    <request>

      <property name="name">MODIFY-BOOK</property>
      <property name="type">PUT</property>
      <property name="api">modify-book.php</property>
      <property name="handler">Siminov.Connect.Sample.Services.ModifyBook</property>
      <property name="mode">ASYNC</property>

      <header-parameters>
        <header-parameter>
          <property name="name">Accept</property>
          <property name="value">application/xml</property>
        </header-parameter>
        <header-parameter>
          <property name="name">Content-Type</property>
          <property name="value">application/xml</property>
        </header-parameter>
      </header-parameters>

    </request>
    <request>

      <property name="name">DELETE-BOOK</property>
      <property name="type">DELETE</property>
      <property name="api">delete-book.php</property>
      <property name="handler">Siminov.Connect.Sample.Services.DeleteBook</property>
      <property name="mode">ASYNC</property>

      <header-parameters>
        <header-parameter>
          <property name="name">Accept</property>
          <property name="value">application/xml</property>
        </header-parameter>
        <header-parameter>
          <property name="name">Content-Type</property>
          <property name="value">application/xml</property>
        </header-parameter>
        <header-parameter>
          <property name="name">name</property>
          <property name="value">{@resource BOOK_TITLE}</property>
        </header-parameter>
      </header-parameters>

    </request>
  </requests>

</service-descriptor>
