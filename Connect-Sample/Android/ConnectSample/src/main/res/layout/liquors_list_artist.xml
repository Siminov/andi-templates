<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/liquors"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/liquors_list_background" android:orientation="vertical"
    >

    <LinearLayout 
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        >
        
	    <TextView android:id="@+id/liquor_type"
	        android:layout_width="fill_parent" android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip" android:gravity="center_horizontal" android:layout_gravity="center_horizontal"
	        android:textStyle="bold" android:textColor="@android:color/black"
	        />
        
    </LinearLayout>

    <LinearLayout 
		android:layout_width="fill_parent" android:layout_height="30dip"
		android:background="@color/liquors_list_option_background" android:layout_marginTop="20dip"
		>

        <LinearLayout android:id="@+id/liquor_details"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:gravity="left"
            >
			<ImageView 
	            android:layout_width="wrap_content" android:layout_height="wrap_content"
	            android:src="@drawable/circle" android:layout_marginRight="3dip" 
	            android:layout_gravity="center_vertical" android:layout_marginLeft="5dip"
	            />
	        	
		    <TextView 
				android:layout_width="wrap_content" android:layout_height="wrap_content"
			    android:gravity="left|center_vertical" android:layout_gravity="left|center_vertical" 
			    android:textColor="@android:color/black" android:text="@string/liquor_details"
			    />
        </LinearLayout>
        
	</LinearLayout>
    
    
</LinearLayout>
