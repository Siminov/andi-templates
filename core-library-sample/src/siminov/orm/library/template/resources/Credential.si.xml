<database-mapping-descriptor>

	<entity table_name="CREDENTIAL" class_name="siminov.orm.library.template.model.Credential">
		
		<attribute variable_name="accountId" column_name="ACCOUNT_ID">
			<property name="type">java.lang.String</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>		
		
		<attribute variable_name="credentialType" column_name="CREDENTIAL_TYPE"> 
			<property name="type">java.lang.String</property>
			<property name="primary_key">true</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>
		
		<attribute variable_name="token" column_name="TOKEN"> 
			<property name="type">java.lang.String</property>
			<property name="not_null">true</property>
			<property name="unique">true</property>
		</attribute>

		<attribute variable_name="logged" column_name="LOGGED"> 
			<property name="type">java.lang.String</property>
		</attribute>
		
	</entity>

</database-mapping-descriptor>